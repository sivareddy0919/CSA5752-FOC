#include<stdio.h>
int main(){
	int num,i,sum=0,n;
	float avg;
	printf("enter term of n numbers:");
	scanf("%d",&n);
	i=1;
	while(i<=n)
	{
		printf("number %d=",i);
		scanf("%d",&num);
		sum=sum+num;
		i++;
	}
	avg=(float)sum/n;
	printf("\n the sum of n numbers=%d",sum);
	printf("\n the average of n numbers=%2.f\n",avg);
	
}
